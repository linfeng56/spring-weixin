<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.linfeng.dao.UserDao">
    <resultMap id="UserBaseMap" type="com.github.linfeng.model.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="user_phone" property="nickName" jdbcType="VARCHAR"/>
        <result column="user_email" property="pwd" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectUserById" parameterType="java.lang.Long" resultMap="UserBaseMap">
        SELECT * FROM tb_user
        WHERE id = #{userId}
    </select>

    <select id="selectUserByUserName" parameterType="java.lang.String" resultMap="UserBaseMap">
        SELECT * FROM tb_user
        WHERE userName = #{userName}
    </select>
</mapper>
